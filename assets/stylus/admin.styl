mobile = "(max-width: 600px)"
compu = "(min-width: 600px)"

.croppie-container
	max-height 200px
	.cr-boundary
		width 300px
		height 235px !important
.imagen-container
	width 100%
	height 24%
	.dropify-container
		width 96%
		

.dropify-wrapper
	&.touch-fallback
		.dropify-clear
			bottom 8px !important

.ta-scroll-window
	& > .ta-bind
		min-height 150px !important
		
md-grid-list
	md-grid-tile
		background-repeat no-repeat
		background-size cover
		background-position center

.imagen-button
	margin-top 20px
		

.servicio-form
	.descripcion-container
		text-angular
			.ta-toolbar
				display flex
				flex-direction row
				flex-wrap wrap
				.ta-button-group
					button
						md-icon 
							color #F44336
		.titulo
			md-icon
				margin-left 0
				margin 13px
.servicio.info
	background-color #1a57a5 !important
		
.Servicios
	.AntesEdicion
		.infoBasica-content
			p 
				font-size 20px
				
